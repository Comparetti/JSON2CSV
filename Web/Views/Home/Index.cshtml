@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background: linear-gradient(to bottom right, #1f3c88, #5d8aa8);
    }

    .input-group-custom {
        border-radius: 50px;
        overflow: hidden;
        box-shadow: inset 0 0 5px rgba(0,0,0,0.1), 0 4px 6px rgba(0,0,0,0.1);
        background-color: #fff;
    }

        .input-group-custom .form-control {
            border: none;
            background: transparent;
            font-family: 'Courier New', Courier, monospace;
            font-size: 16px;
            padding-left: 50px;
        }

        .input-group-custom .input-group-prepend {
            position: absolute;
            z-index: 10;
            width: 50px;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #999;
        }

        .input-group-custom .input-group-append .btn {
            border: none;
            background-color: #1f3c88;
            color: #fff;
        }

            .input-group-custom .input-group-append .btn:hover {
                background-color: #163172;
            }

    .modal.fade .modal-dialog {
        transform: translate(0, -50%);
        transition: transform 0.3s ease-out;
    }

    .modal.fade.show .modal-dialog {
        transform: translate(0, 0);
    }

    .modal-content-custom {
        border-radius: 20px;
        overflow: hidden;
    }

    .modal-header-custom {
        background-color: #1f3c88;
        color: #fff;
        border-bottom: none;
        justify-content: center;
    }

    .modal-body-custom {
        text-align: center;
        padding: 30px;
    }

        .modal-body-custom i {
            font-size: 60px;
            color: #28a745;
            margin-bottom: 20px;
        }

    .modal-footer-custom {
        border-top: none;
        justify-content: center;
        padding-bottom: 30px;
    }

    .card-custom {
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s;
    }

        .card-custom:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        }

    .card-header-custom {
        background-color: #1f3c88;
        color: white;
        text-align: center;
        border-bottom: none;
    }

    .btn-custom {
        background-color: #1f3c88;
        border: none;
        border-radius: 50px;
        padding: 10px 20px;
        color: #fff;
        transition: background-color 0.3s;
    }

        .btn-custom:hover {
            background-color: #163172;
        }

    .content-header {
        background: linear-gradient(to bottom, #1f3c88, #334257);
        color: white;
        padding: 30px 0;
        text-align: center;
    }

        .content-header h1 {
            font-size: 48px;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        .content-header p {
            font-size: 18px;
            color: #e0e0e0;
        }

</style>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12 text-center">
                <h1>Conversor de Arquivos</h1>
                <p>Converta seus arquivos de forma rápida, fácil e gratuita.</p>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container">
        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <div class="input-group input-group-lg input-group-custom">
                    <div class="input-group-prepend">
                        <i class="fas fa-code"></i>
                    </div>
                    <input type="text" id="campoJsonExemplo" class="form-control" value='{"nome": "João", "idade": "30", "cidade": "São Paulo"}' readonly>
                    <div class="input-group-append">
                        <button class="btn btn-custom" id="botaoCopiar" type="button">
                            <i class="fas fa-copy"></i> Copiar
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center mt-5">
            <div class="col-md-5 mb-4">
                <div class="card card-custom">
                    <div class="card-header card-header-custom">
                        <h3 class="card-title">JSON para CSV</h3>
                    </div>
                    <div class="card-body text-center">
                        <p>Converta seus arquivos JSON para o formato CSV de forma rápida e fácil.</p>
                        <a href="@Url.Action("JsonToCsv", "Conversao")" class="btn btn-custom">
                            <i class="fas fa-arrow-right"></i> Iniciar Conversão
                        </a>
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>

<div class="modal fade" id="modalCopiado" tabindex="-1" role="dialog" aria-labelledby="modalCopiadoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content modal-content-custom">
            <div class="modal-header modal-header-custom">
                <h5 class="modal-title" id="modalCopiadoLabel">Copiado!</h5>
            </div>
            <div class="modal-body modal-body-custom">
                <i class="fas fa-check-circle"></i>
                <p>O JSON foi copiado para a área de transferência.</p>
            </div>
            <div class="modal-footer modal-footer-custom">
                <button type="button" class="btn btn-custom" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#botaoCopiar').on('click', function () {
                var campoJson = $('#campoJsonExemplo');
                campoJson.select();
                document.execCommand('copy');

                $('#modalCopiado').modal('show');

                setTimeout(function () {
                    $('#modalCopiado').modal('hide');
                }, 3000);
            });
        });
    </script>
}
