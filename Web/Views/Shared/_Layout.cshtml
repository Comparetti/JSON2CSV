<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Yardim</title>
    <!-- Estilos do AdminLTE -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow-x: hidden; 
        }

        .wrapper {
            min-height: 100vh; 
            display: flex;
            flex-direction: column;
        }

        .content-wrapper {
            flex: 1;
            padding: 20px;
            background: linear-gradient(to bottom, #f0f2f5, #dfe6e9);
            border: 2px solid #4b5d67;
            border-radius: 15px;
            margin: 20px;
            margin-left: 260px;
            box-sizing: border-box;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
        }

        @@media (min-width: 768px) {
            .content-wrapper {
                margin-left: 240px;
                padding-left: 20px;
            }
        }

        .main-footer {
            background-color: #334257;
            color: white;
            text-align: center;
            padding: 20px;
        }

        .main-sidebar {
            background-color: #334257;
        }

        .main-sidebar .brand-link {
            background-color: #334257;
            border-bottom: 1px solid #4b5d67;
            text-align: center;
            padding: 20px;
        }

        .brand-link {
            margin-bottom: 10px;
            width: 70px;
            height: 70px;
        }

        .brand-link .brand-text {
            display: block;
            font-weight: bold;
            font-size: 1.3rem;
            color: #ffffff;
            margin-top: 10px;
        }

        .nav-sidebar .nav-item > .nav-link.active {
            background-color: #4b5d67;
        }

        .main-header {
            background-color: #334257;
        }

        .navbar-dark .navbar-nav .nav-link {
            color: white;
        }

        .navbar-dark .navbar-nav .nav-link:hover {
            color: #d1d8e0;
        }

        .content {
            overflow: auto;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="~/Home/Index" class="brand-link">
                <img src="~/dist/img/yardim_logo2.png" alt="Logo" class="brand-image img-circle elevation-3" height="60" width="60">
                <span class="brand-text">JSON2CSV</span>
            </a>
            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Home")" class="nav-link active">
                            <i class="nav-icon fas fa-home"></i>
                            <p>Home</p>
                        </a>
                    </li>
                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link active">
                            <i class="nav-icon fas fa-exchange-alt"></i>
                            <p>
                                Conversões
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-header">
                                <small><strong>Conversões Disponíveis</strong></small>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("JsonToCsv", "Conversao")" class="nav-link">
                                    <i class="fas fa-file-code nav-icon"></i>
                                    <p>JSON para CSV</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>

        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>&copy; 2024 <a href="#">Yardim</a>.</strong> Todos os direitos reservados.
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
